<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/orange</item>

        <item name="android:actionBarDivider">@color/white</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item>
        <item name="android:itemBackground">@drawable/action_bar_menu_item_bg</item>
        <item name="android:itemTextAppearance">@style/TextAppearance</item>

        <item name="android:textViewStyle">@style/CustomFontTextView</item>
        <item name="android:buttonStyle">@style/CustomFontButton</item>

    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomFontTextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
    </style>

    <style name="CustomFontButton" parent="android:Widget.Holo.Light.Button">
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
    </style>


</resources>
