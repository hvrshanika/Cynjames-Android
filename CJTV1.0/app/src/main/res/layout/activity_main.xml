<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context="au.com.cynjames.mainView.MainActivity">

    <TextView
        android:id="@+id/main_welcome_user_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center|left"
        android:text=""
        android:textColor="@color/black"
        android:background="@drawable/login_content_bg"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_welcome_user_text"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_content_bg">

        <TextView
            android:id="@+id/main_concept_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_concept"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        
        <TextView
            android:id="@+id/main_concept_count"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/main_concept_text"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/orange"
            android:text="0"
            android:textColor="@color/white"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/main_jobs_pending_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/main_concept_text"
            android:layout_toRightOf="@+id/main_concept_count"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/main_jobs_pending"
            android:textColor="@color/black"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/main_concept_view"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/main_concept_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/main_viewnow_orange_bg"
            android:text="@string/main_view_now"
            android:textColor="@color/white"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/main_concept_ready_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_concept_ready"
            android:layout_below="@+id/main_concept_view"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/main_concept_ready_count"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/main_concept_ready_text"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/dark_red"
            android:text="0"
            android:textColor="@color/white"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/main_jobs_ready_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/main_concept_ready_text"
            android:layout_toRightOf="@+id/main_concept_count"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/main_ready_delivery"
            android:textColor="@color/black"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/main_concept_ready_view"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/main_concept_ready_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_button_bg"
            android:text="@string/main_view_now"
            android:textColor="@color/white"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/main_adhocs_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_adhocs"
            android:layout_below="@+id/main_concept_ready_view"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/main_adhocs_count"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/main_adhocs_text"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/orange"
            android:text="0"
            android:textColor="@color/white"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/main_ad_hocs_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/main_adhocs_text"
            android:layout_toRightOf="@+id/main_concept_count"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/main_adhocs"
            android:textColor="@color/black"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/main_adhocs_view"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/main_adhocs_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/main_viewnow_orange_bg"
            android:text="@string/main_view_now"
            android:textColor="@color/white"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/main_messages_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_messages"
            android:layout_below="@+id/main_adhocs_view"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/main_messages_count"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/main_messages_text"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/dark_red"
            android:text="0"
            android:textColor="@color/white"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/main_unread_msgs_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/main_messages_text"
            android:layout_toRightOf="@+id/main_concept_count"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/main_unread"
            android:textColor="@color/black"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/main_messages_view"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/main_messages_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/login_button_bg"
            android:text="@string/main_view_now"
            android:textColor="@color/white"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"/>


    </RelativeLayout>

</RelativeLayout>
